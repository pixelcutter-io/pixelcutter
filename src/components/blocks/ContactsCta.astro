---
import Arrow from "@/assets/icons/arrow-up-right.svg";
import { useTranslations } from "@/i18n/i18n";
import type { AlignType, ColorType } from "../../types/components";
import Button from "../Button.astro";
import Typo from "../typography/Typo.astro";

interface Props {
	color?: ColorType;
	align?: AlignType;
}

const { lang } = Astro.params;
const t = useTranslations(lang as "en" | "it");
const { color = "secondary", align = "left" } = Astro.props;
---

<div class:list={["contacts", align]}>
  <Typo
    class="title"
    text={t("home.cta.title")}
    tag="h2"
    weight="black"
    color={color}
    size={["tr", "sp"]}
    balancer
  />
  <Button
    label={t("action.contact")}
    icon={Arrow}
    href={`/${lang}/contacts`}
    size="tr"
    hoverBgColor={color === "secondary" ? "secondary" : "primary" }
    hoverLabelColor={color === "secondary" ? "primary": "secondary"}
    hoverAnimation />
</div>

<style lang="scss">
  .contacts {
  display: flex;
  flex-direction: column;
  gap: var(--s-db);
}

.contacts :global(.title) {
  @include last-character('!');
}

// If center
.center {
  align-items: center;
}

.center :global(.title) {
  text-align: center;
}
</style>
