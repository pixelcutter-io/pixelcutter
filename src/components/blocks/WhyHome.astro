---
import MarkdownText from "@/components/typography/MarkdownText.astro";
import Typo from "@/components/typography/Typo.astro";
import { useTranslations } from "@/i18n/i18n";
import WhyAnimation from "../animations/WhyAnimation.astro";

const t = useTranslations("en");
---
<div class="why">
  <article>
    <Typo class="title" text={t('home.why.title')} tag="h2" weight="black" color="primary" size={['tr', 'qt']} balancer />
    <MarkdownText text={t('home.why.text')} color="primary" size={['df', 'xxl']}  />
  </article>
  <WhyAnimation class="illustration"/>
</div>

<style lang="scss">
  .why {
  display: grid;
  grid-template-columns: 1fr;
  gap: 5vw;
  
  @include media(lg) {
    grid-template-columns: 2fr 1fr;
    align-content: start;
  }
}

.why article {
  display: flex;
  flex-direction: column;
  gap: var(--s-xxl);
}

.why :global(.title) {
  @include last-character('!');
}

.why :global(.illustration) {
  width: 60%;
  justify-self:  center;
  
  @include media(md) {
    width: 40%;
  }
  
  
  @include media(lg) {
    width: 100%;
  }
}

</style>
