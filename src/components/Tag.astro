---
import React from "@/assets/tags/react.svg";
import Sass from "@/assets/tags/sass.svg";
import { useTranslations } from "@/i18n/i18n";
import Typo from "./typography/Typo.astro";

interface Props {
	tag: string;
}

const { tag } = Astro.props;

const { lang } = Astro.params;
const t = useTranslations(lang as "en" | "it");

const iconMap = {
	react: React,
	sass: Sass,
};

const Icon = iconMap[tag as keyof typeof iconMap] || null;

if (!Icon) return;
---

<div class="tag">
  <Icon width="5rem" height="5rem" fill="var(--c-accent)" />
  <Typo text={t(`label.${tag}`)} color="accent" size={['md', 'lg']} />
</div>

<style lang="scss">
  .tag {
    width: fit-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--s-xxs);
  }

</style>
